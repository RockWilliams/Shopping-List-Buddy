<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/home.css" type="text/css">
    <link rel="stylesheet" href="/styles/main.css" type="text/css">
    <title>Document</title>
</head>
<body>
    <header>
        <h1>List Buddy</h1>
            <nav>
                <a class="models" href="/homepage">Home</a>
                <a class ="models" href="/store">Your Stores</a>
                <a class="models" href="/store/lists">Your Lists</a>
                <form action="/logout?_method=DELETE" method="POST">
                    <input type="submit" value="Logout">
                </form>
            </nav>
    </header>
    <div class="flexbox">
        <div class="content">
            <h1><%= stores.name %> </h1>
            <h3>Store data:</h3>
            <p class="storeData">Type of store: <%= stores.type %> </p>
            <p class="storeData">Cost: <%= stores.expensive %> </p>
            <br>
            <section>
                <a href="/store/<%= stores._id %>/edit">(edit store)</a>
            </section>
            <br>
            <section>
                <form action="/store/<%= stores._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete store">
                </form>
            </section>
            <br>
            <br>
            
            
            <h3>Your shopping lists for <%= stores.name %></h3>
            <a class="new-list-link" href="/store/<%= stores._id %>/new-list">Create New Shopping List</a>
            
            
            <% stores.lists.forEach(list => { %>
                <p>
                    <a href="/store/<%= stores._id %>/<%= list._id %>">
                        <%= list.name %> 
                    </a>
                </p>
            <% }) %>
            <br>
            
    
            
    
            
            <h3><%= stores.name %> Products </h3>
            <a class="new-item-link" href="/product/new">Create New Items</a>
            
            <p>
                <ul>
                    <% stores.products.forEach(product => { %>
                        <li><%= product.name %></li>
                <% }) %>
                </ul>
            </p>
            <!-- <a href="/product">Products from <%= stores.name %> </a> -->
            <br>
            <br>
            <a href="/store">All Stores</a>
        </div>
    </div>
    
</body>
</html>